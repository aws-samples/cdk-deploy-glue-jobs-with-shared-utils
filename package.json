{
    "name": "cdk-with-glue",
    "version": "0.1.0",
    "bin": {
        "cdk-with-glue": "bin/cdk-with-glue.js"
    },
    "scripts": {
        "format": "prettier -w lib bin test",
        "build": "npm-run-all build-*",
        "build-cdk": "tsc",
        "build-glue": "cd glue && pipenv install --dev && pipenv run build",
        "watch": "tsc -w",
        "test": "npm-run-all test-*",
        "test-cdk": "jest",
        "test-glue": "cd glue && pipenv run test",
        "cdk": "cdk",
        "upload-data": "bin/upload-to-s3.sh"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "18.15.11",
        "jest": "^29.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.7",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "~5.0.4"
    },
    "dependencies": {
        "aws-cdk-lib": "^2.73.0",
        "constructs": "^10.1.304"
    }
}
