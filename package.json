{
    "name": "cdk-with-glue",
    "description": "Demonstrate how to package shared code into multiple AWS Glue Jobs",
    "license": "Apache-2.0",
    "version": "1.0.0",
    "author": {
        "name": "Jacob LaGrou",
        "email": "lagroujl@amazon.com",
        "url": "https://github.com/lagroujl"
    },
    "repository": {
        "type": "git",
        "url": "https://gitlab.aws.dev/lagroujl/cdk-with-glue"
    },
    "keywords": [
        "aws",
        "glue",
        "cdk",
        "pyspark"
    ],
    "bin": {
        "cdk-with-glue": "bin/cdk-with-glue.js"
    },
    "scripts": {
        "format": "prettier -w lib bin test",
        "build": "npm-run-all build-*",
        "build-cdk": "tsc",
        "build-glue": "cd glue && pipenv install --dev && pipenv run build",
        "watch": "tsc -w",
        "test": "npm-run-all test-*",
        "test-cdk": "jest",
        "test-glue": "cd glue && pipenv run test",
        "cdk": "cdk",
        "upload-data": "bin/upload-to-s3.sh"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "18.15.11",
        "jest": "^29.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.7",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "~5.0.4"
    },
    "dependencies": {
        "aws-cdk": "^2.73.0",
        "aws-cdk-lib": "^2.73.0",
        "constructs": "^10.1.304"
    }
}
